# Modules
gulp = require('gulp')
coffee = require('gulp-coffee')

# Coffee
gulp.task 'coffee', ->
  gulp.src('./logtrap.coffee')
    .pipe(coffee({bare:true}))
    .pipe(gulp.dest('./'))
  gulp.src('./test/logtrap_spec.coffee')
    .pipe(coffee({bare:true}))
    .pipe(gulp.dest('./test'))

# Default
gulp.task 'default', [ 'coffee' ]
